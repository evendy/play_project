<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_toolbar_height"
    android:background="@color/common_yellow">

    <ImageView
        android:id="@+id/menu_back"
        android:layout_width="@dimen/toolbar_menu_size"
        android:layout_height="@dimen/toolbar_menu_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="title"
        android:textColor="@color/common_dark_title"
        android:textSize="@dimen/common_toolbar_title_textSize" />


    <ImageView
        android:id="@+id/menu_sure"
        android:layout_width="@dimen/toolbar_menu_size"
        android:layout_height="@dimen/toolbar_menu_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/sure"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/menu_share"
        android:layout_width="@dimen/toolbar_menu_size"
        android:layout_height="@dimen/toolbar_menu_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/share"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/menu_mark"
        android:layout_width="@dimen/toolbar_menu_size"
        android:layout_height="@dimen/toolbar_menu_size"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/menu_share"
        android:padding="5dp"
        android:src="@drawable/mark"
        android:visibility="gone" />

</RelativeLayout>