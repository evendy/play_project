<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/white_gray_btn"
    android:orientation="horizontal">

    <TextView
        android:textStyle="bold"
        android:id="@+id/alarm_time"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="09:50"
        android:textColor="@color/common_dark_text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/alarm_repeat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|left"
        android:text="@string/notify_one"
        android:textColor="@color/common_gray_text"
        android:textSize="14sp" />

    <Switch
        android:id="@+id/alarm_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp" />

</LinearLayout>