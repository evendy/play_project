<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_toolbar_height"
    android:background="#00000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/picker_cancel"
        android:layout_width="@dimen/toolbar_menu_size"
        android:layout_height="@dimen/toolbar_menu_size"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/cancel" />

    <TextView
        android:id="@+id/picker_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/common_dark_title"
        android:textSize="@dimen/common_toolbar_title_textSize" />

    <ImageView
        android:id="@+id/picker_sure"
        android:layout_width="@dimen/toolbar_menu_size"
        android:layout_height="@dimen/toolbar_menu_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/sure" />
</LinearLayout>